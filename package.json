{
  "name": "rxjs-shell",
  "version": "2.1.2",
  "description": "rxjs operators for execute shell command with ease",
  "keywords": [
    "rxjs",
    "operator",
    "shell"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/johnny-mh/rxjs-shell.git"
  },
  "license": "MIT",
  "author": "johnny-mh <romz1212@gmail.com>",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "cover": "rimraf .nyc_output && rm -rf coverage && nyc mocha -r ts-node/register -r source-map-support/register test/**/*.spec.ts",
    "format": "prettier --write \"**/*\"",
    "lint": "prettier --check \"**/*\"",
    "test": "mocha -r ts-node/register test/**/*.spec.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "prettier --check \"**/*\"",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "nyc": {
    "all": true,
    "exclude": [
      "dist/",
      "coverage",
      "src/index.ts",
      "**/*.spec.ts",
      "**/flycheck**",
      "test/fixtures/**"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "text",
      "html"
    ]
  },
  "dependencies": {
    "rxjs": "^6.0.0",
    "tree-kill": "^1.2.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.0.1",
    "@commitlint/config-conventional": "^9.0.1",
    "@types/chai": "^4.1.4",
    "@types/chai-spies": "^1.0.0",
    "@types/mkdirp": "^1.0.0",
    "@types/mocha": "^7.0.0",
    "@types/node": "^14.0.0",
    "@types/rimraf": "^3.0.0",
    "@types/sinon": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "chai": "*",
    "chai-exclude": "^2.0.2",
    "chai-spies": "^1.0.0",
    "cz-conventional-changelog": "3.2.0",
    "eslint": "^7.4.0",
    "husky": "^4.0.0",
    "import-sort-style-module": "^6.0.0",
    "mkdirp": "^1.0.3",
    "mocha": "^8.0.0",
    "nyc": "^15.0.0",
    "prettier": "^2.0.0",
    "prettier-plugin-import-sort": "^0.0.4",
    "rimraf": "^3.0.0",
    "rxjs": "^6.0.0",
    "sinon": "^9.0.1",
    "source-map-support": "^0.5.9",
    "standard-version": "^8.0.0",
    "ts-node": "^8.8.1",
    "typescript": "^3.9.6"
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  }
}
